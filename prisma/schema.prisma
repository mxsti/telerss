generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "cockroachdb"
}

model User {
  id    BigInt @id
  name  String
  feeds Feed[]
}

model Feed {
  id            BigInt   @id @default(autoincrement())
  description   String?
  url           String
  latestPubDate DateTime
  User          User     @relation(fields: [userId], references: [id])
  userId        BigInt

  @@unique([url, userId])
}
